# File: .env.example
# Environment variables template - Copy to .env and configure
# ------------------------------------------------------------

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Environment: development | production
NODE_ENV=development

# Server port
PORT=3001

# Server host
HOST=0.0.0.0

# Log level: debug | info | warn | error
LOG_LEVEL=info

# ===========================================
# REDIS CONFIGURATION
# ===========================================

# Redis connection URL
REDIS_URL=redis://localhost:6379

# ===========================================
# TELEGRAM CONFIGURATION
# ===========================================

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Telegram Chat ID for message relay
# This is the chat/group where the bot sends encrypted messages
TELEGRAM_CHAT_ID=-1001234567890

# Webhook URL (your public server URL + /webhook/telegram)
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook/telegram

# Webhook secret for verification (random string)
TELEGRAM_WEBHOOK_SECRET=your_random_secret_string_here

# ===========================================
# TRANSLATION CONFIGURATION
# ===========================================

# LibreTranslate server URL
TRANSLATE_URL=http://localhost:5000

# Enable translation service
TRANSLATE_ENABLED=true

# ===========================================
# RATE LIMITING
# ===========================================

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100
